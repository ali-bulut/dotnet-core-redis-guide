@model List<string>
@{
}

<h1>Index</h1>

<form method="post" asp-action="Add" enctype="application/x-www-form-urlencoded">
    <input type="text" name="name" />
    <button type="submit">Save</button>
</form>

@foreach (var item in Model)
{
    <h4>
        @item - <a asp-controller="ListType" asp-action="Remove" asp-route-name="@item">Remove</a>
    </h4>
}